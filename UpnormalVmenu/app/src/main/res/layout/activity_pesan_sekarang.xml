<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.voidream.upnormalvmenu.PesanSekarang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/relativeLayout"
        android:background="@color/colorPrimary"
        android:elevation="2dp">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_back_white_24dp"
            android:id="@+id/button_back"
            android:background="@drawable/button_transparent" />

        <TextView
            android:text="@string/pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button_back"
            android:layout_toEndOf="@+id/button_back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/static_title"
            style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_send_white_24dp"
            android:id="@+id/send"
            android:background="@drawable/button_transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar">

        <TextView
            android:text="@string/a_n"
            android:layout_width="@dimen/list_menu"
            android:layout_height="wrap_content"
            android:id="@+id/form1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/static_subheading"
            android:layout_marginLeft="@dimen/screen_edge"
            android:textColor="@color/black54"
            android:ellipsize="end" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/konten1"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/static_subheading"
            android:textColor="@android:color/black"
            android:layout_marginRight="@dimen/right_side_icon"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/space_between_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider1"
        app:srcCompat="@color/black22"
        android:id="@+id/imageView" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar">

        <TextView
            android:text="@string/meja"
            android:layout_width="@dimen/list_menu"
            android:layout_height="wrap_content"
            android:id="@+id/form2"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/static_subheading"
            android:layout_marginLeft="@dimen/screen_edge"
            android:textColor="@color/black54"
            android:ellipsize="end" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:id="@+id/konten2"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/static_subheading"
            android:textColor="@android:color/black"
            android:layout_marginRight="@dimen/right_side_icon"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/space_between_content"
            android:inputType="numberDecimal"
            android:maxLength="3" />
    </LinearLayout>
</LinearLayout>
