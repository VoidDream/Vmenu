<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dummy"
        android:id="@+id/menu_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
            android:text="13.5K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/harga"
            android:textSize="@dimen/text_size1"
            android:textColor="@android:color/white"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/black38"
            android:paddingBottom="@dimen/margin3"
            android:paddingTop="@dimen/margin3"
            android:paddingLeft="@dimen/text_size2"
            android:paddingRight="@dimen/text_size2"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_gradient"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/layout_keterangan" />

    <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layout_keterangan"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginTop="-116dp"
            android:layout_below="@+id/menu_image">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:text="Vanilla Milkshake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nama"
                    android:textSize="@dimen/text_size6"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin5" />

                <TextView
                    android:text="Susu yang dikocok dengan sepenuh hati oleh sang koki dengan rasa vanilla yang lejat dan menggoda selera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/keterangan"
                    android:textSize="@dimen/text_size1"
                    android:textColor="@android:color/white"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginBottom="@dimen/margin5" />
            </LinearLayout>

        </RelativeLayout>
</RelativeLayout>