<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_popup_jumlah_pesanan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.voidream.vmenu.PopupJumlahPesanan"
    android:background="@color/black54">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_edge">

            <TextView
                android:text="Rp35.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/harga"
                android:textSize="@dimen/static_subheading"
                android:layout_centerVertical="true"
                android:textColor="@color/black54"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/screen_edge"
                style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"/>

            <TextView
                android:text="Ice Vanilla Milkshake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nama"
                android:paddingLeft="@dimen/screen_edge"
                android:textColor="@color/black87"
                android:textSize="@dimen/static_subheading"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="@dimen/screen_edge"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/harga"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_stroke_primary"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/screen_edge"
            android:layout_marginBottom="@dimen/screen_edge"
            android:layout_marginTop="@dimen/screen_edge">

            <ImageButton
                android:src="@drawable/ic_minus_white_24dp"
                android:textColor="@android:color/white"
                android:layout_width="@dimen/list_menu"
                android:layout_height="@dimen/list_menu"
                android:id="@+id/button_decrease"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_primary"
                android:textSize="@dimen/statusbar" />

            <TextView
                android:text="1"
                android:layout_width="@dimen/list_menu"
                android:layout_height="@dimen/list_menu"
                android:id="@+id/jumlah"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/static_title"
                android:textStyle="bold"
                android:maxLength="2"
                android:maxLines="1" />

            <ImageButton
                android:src="@drawable/ic_plus_white_24dp"
                android:textColor="@android:color/white"
                android:layout_width="@dimen/list_menu"
                android:layout_height="@dimen/list_menu"
                android:id="@+id/button_increase"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_primary"
                android:textSize="@dimen/statusbar" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider1"
            android:src="@color/black22"
            android:id="@+id/imageView" />

        <Button
            android:text="@string/tambahkan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_menu"
            android:id="@+id/tambahkan"
            android:textSize="@dimen/static_button"
            android:background="@drawable/button_transparent"
            android:textColor="@color/colorPrimary"
            style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"/>

    </LinearLayout>
</RelativeLayout>
